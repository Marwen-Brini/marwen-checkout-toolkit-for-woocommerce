{
    "name": "marwen-brini/checkout-toolkit-for-woo",
    "description": "A comprehensive checkout enhancement plugin for WooCommerce with delivery scheduling and custom order fields",
    "type": "wordpress-plugin",
    "keywords": ["wordpress", "woocommerce", "checkout", "delivery", "date-picker", "custom-fields"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Marwen Brini",
            "email": "brini.marwen@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "WooCheckoutToolkit\\": "src/WooCheckoutToolkit/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:coverage": "phpunit --coverage-text --colors=always"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
